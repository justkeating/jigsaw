            android:name="cz.destil.sliderpuzzle.PictureTakerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cz.destil.sliderpuzzle.ui.AboutActivity"
            android:label="@string/about" >
        </activity>
        <activity
            android:name="cz.destil.sliderpuzzle.ui.MainActivity"
            android:label="@string/title_activity_picture_taker" >

        </activity>
    </application>

</manifest>